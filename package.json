{
  "name": "freelancer-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node generate-config.js && ng serve",
    "build": "node generate-config.js && ng build",
    "build:prod": "node generate-config.js && ng build --configuration production",
    "watch": "node generate-config.js && ng build --watch --configuration development",
    "setup-env": "node generate-config.js",
    "generate-config": "node generate-config.js",
    "docker:build": "docker build --build-arg EMAILJS_PUBLIC_KEY=%EMAILJS_PUBLIC_KEY% --build-arg EMAILJS_SERVICE_ID=%EMAILJS_SERVICE_ID% --build-arg EMAILJS_TEMPLATE_ID=%EMAILJS_TEMPLATE_ID% --build-arg EMAILJS_TO_EMAIL=%EMAILJS_TO_EMAIL% -t freelancer-app .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t freelancer-app:dev .",
    "docker:run": "docker run -d -p 80:80 --name freelancer-container freelancer-app",
    "docker:run:dev": "docker run -d -p 4200:4200 -v $(pwd):/app --name freelancer-dev-container freelancer-app:dev",
    "docker:stop": "docker stop freelancer-container && docker rm freelancer-container",
    "docker:stop:dev": "docker stop freelancer-dev-container && docker rm freelancer-dev-container",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose --profile dev up -d",
    "docker:logs": "docker logs freelancer-container",
    "docker:clean": "docker system prune -f"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.14",
    "@angular/common": "^18.2.14",
    "@angular/compiler": "^18.2.14",
    "@angular/core": "^18.2.14",
    "@angular/forms": "^18.2.14",
    "@angular/platform-browser": "^18.2.14",
    "@angular/platform-browser-dynamic": "^18.2.14",
    "@angular/router": "^18.2.14",
    "@emailjs/browser": "^3.11.0",
    "@fortawesome/angular-fontawesome": "^0.15.0",
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-brands-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "dot-env": "^0.0.1",
    "dotenv": "^17.2.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular/cli": "^18.2.21",
    "@angular/compiler-cli": "^18.2.14",
    "@types/node": "^18.18.0",
    "typescript": "~5.4.5"
  }
}
